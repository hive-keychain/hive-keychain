{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDirs": [".", "../"],
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@extension/*": ["../src/*"] //TODO test if possible just to get the src folder.
    }
  }
}
